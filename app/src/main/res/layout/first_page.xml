<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FirstActivity"
    android:clickable="false"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/space_evader"
        android:layout_centerInParent="true"
        android:id="@+id/first_iv"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/first_iv">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="START GAME"
            android:id="@+id/first_button"
            android:layout_centerInParent="true"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:theme="@style/Widget.AppCompat.PopupMenu"
            android:enabled="true"
            android:textColor="#1874cd"
            android:singleLine="false"
            android:onClick="toMainActivity"/>

    </RelativeLayout>

</RelativeLayout>