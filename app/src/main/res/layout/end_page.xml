<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".EndActivity"
    android:clickable="false"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/space_evader"
        android:id="@+id/end_imageView"
        android:adjustViewBounds="false"
        android:layout_alignBottom="@+id/end_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/game_over"
        android:id="@+id/end_imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_tv"
        android:textColor="#ffff0900"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:ellipsize="none"
        android:textStyle="bold"
        android:layout_above="@+id/end_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="Try again?"
        android:id="@+id/end_button"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:theme="@style/Widget.AppCompat.PopupMenu"
        android:enabled="true"
        android:textColor="#1874cd"
        android:singleLine="false"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>